<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.RegistroPadreDosActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/registra_tuhijo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRA TU HIJO"
                android:background="@drawable/toolbar_nombre"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="132435"
                android:textSize="22sp"
                android:layout_alignRight="@+id/registra_tuhijo"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:background="@drawable/toolbar_pin"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"/>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_negro"
                    android:textColorHint="@color/editText2"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nombre_hijo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:hint="Nombre del hijo"
                        android:textSize="@dimen/size_edittext"
                        android:paddingHorizontal="20dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_negro"
                    android:textColorHint="@color/editText2"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/documento_identidad_hijo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="Documento de identidad"
                        android:textSize="18sp"
                        android:paddingHorizontal="20dp"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Sexo"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/editText2"
                        android:layout_marginRight="30dp"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:entries="@array/genero"
                        android:gravity="right"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:textAlignment="center"
                        android:popupBackground="@drawable/boton_redondo_relleno_ninos"
                        android:background="@drawable/boton_redondo_negro"
                        android:dropDownWidth="match_parent"
                        />


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_negro"
                    android:textColorHint="@color/editText2"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/estatura_madre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="Estatura madre (cm)"
                        android:textSize="18sp"
                        android:paddingHorizontal="20dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_negro"
                    android:textColorHint="@color/editText2"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/estatura_padre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="Estatura padre (cm)"
                        android:textSize="18sp"
                        android:paddingHorizontal="20dp"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de nacimiento"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/editText2"
                    android:layout_marginRight="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="@drawable/boton_redondo_negro"
                        android:paddingLeft="18dp"
                        android:paddingTop="12dp"
                        android:layout_gravity="center"
                        android:paddingBottom="12dp"
                        android:ems="10"
                        android:inputType="date"
                        android:hint="@string/formato_fecha" />

                    <ImageButton
                        android:id="@+id/obtener_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_redondo_relleno_boton"
                        android:src="@drawable/ic_citas"
                        android:padding="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <Button
                    android:id="@+id/boton_registro_hijo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:textSize="@dimen/size_botones"
                    android:textColor="@drawable/texto_boton_redondo"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_relleno"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp" />

                <Button
                    android:id="@+id/boton_agregar_otrohijo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir otro hijo"
                    android:textSize="@dimen/size_botones"
                    android:textColor="@drawable/texto_boton_redondo"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_relleno"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>

        </ScrollView>

</android.support.constraint.ConstraintLayout>