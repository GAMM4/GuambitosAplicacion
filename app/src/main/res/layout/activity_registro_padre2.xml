<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroPadre2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="123456"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="right"
            android:background="@drawable/boton_redondo_negro"
            android:theme="@style/BotonTextoBlanco"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registra tu hijo"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del hijo"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Documento de identidad"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:paddingHorizontal="20dp"
                android:hint="Ni単o"
                android:textSize="30dp"
                android:background="@drawable/boton_redondo_relleno"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/BotonTextoBlanco" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/boton_redondo_relleno"
                android:hint="Ni単a"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:theme="@style/BotonTextoBlanco" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Fecha de nacimiento"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:theme="@style/BotonTextoBlanco"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_negro"
                android:hint="Dia"
                android:padding="10dp"
                android:textColorHint="@color/colorPrimaryDark" />

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_negro"
                    android:hint="Mes"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_negro"
                    android:hint="A単o"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registrar"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_relleno"
            android:theme="@style/BotonTextoBlanco"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A単adir otro hijo"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_relleno"
            android:theme="@style/BotonTextoBlanco"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>