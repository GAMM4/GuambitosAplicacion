<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioPadresActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/menu_izquierdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:id="@+id/guambitos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="Güambitos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/nombre_padre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/toolbar_nombre"
        android:text="Juan Pablo Ramirez"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingLeft="20dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        />

    <TextView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_gravity="right"
        android:background="@drawable/toolbar_pin"
        android:text="132435"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        />


    <include layout="@layout/content_inicio_padres" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_hijos"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nombre_hijo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nicolas Ramirez"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 meses 2 semanas"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última actualización"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/Oct/2018"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="101dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_action_add"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alimentación de bebe"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/contenido_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:text="Dale 5 comidas al dia y cuidado muy bien de los problemas que se presentan, haz actividades con el para mejorar su intelecto."/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>