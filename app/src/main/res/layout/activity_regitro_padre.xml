<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegitroPadreActivity"
   >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/Registro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="REGISTRO"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nombre_padre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Nombre del Padre"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingHorizontal="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/documento_identidad_padre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Documento de Identidad"
                    android:textSize="20dp"
                    android:paddingHorizontal="20dp">
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/crear_contraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Crear Contraseña"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:paddingHorizontal="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pregunta_seguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Pregunta de seguridad"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/respuesta_pregunta_seguridad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Tu Respuesta"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/codigo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/boton_redondo_negro"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:hint="Este es tu codigo: "
            android:textSize="30dp"
            android:paddingHorizontal="20dp"           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dale este PIN  a tu doctor en el momento de la cita para que obtenga tus datos"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/boton_siguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Siguiente"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo_relleno"
            android:theme="@style/BotonTextoBlanco"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />




    </LinearLayout>
</android.support.constraint.ConstraintLayout>