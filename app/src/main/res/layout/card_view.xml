<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_hijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_hijos"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombre_hijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nicolas Ramirez"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/edad_hijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 meses 2 semanas"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última actualización"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/fecha_ultimoRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/Oct/2018"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>