<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_hijo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_hijos"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombre_hijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre hijo"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/edad_hijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última actualización"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/fecha_ultimoRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>
